<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapScreen"
    android:background="@drawable/blurmap"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_30"
        android:orientation="horizontal">



    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="@dimen/size_30"
        android:layout_height="@dimen/size_30"
        android:scaleType="fitXY"
        android:layout_marginLeft="@dimen/size_25"
        app:srcCompat="@drawable/weather"
        android:layout_marginStart="@dimen/size_25" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Weather"
            android:layout_marginLeft="@dimen/size_10"
            android:layout_marginTop="@dimen/size_5"
            android:textSize="@dimen/size_16sp"
            android:layout_marginStart="@dimen/size_10" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/size_10">


        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Clear"
            android:layout_marginLeft="@dimen/size_25"
            android:textSize="@dimen/size_20sp"
            android:textStyle="bold"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_8"
            android:text=".has fog"
            android:textColor="#424242"
            android:textSize="@dimen/size_14sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <TextView
        android:id="@+id/textView21"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The Sweetness Of Grilling\nCreate Scrumptious"
        android:layout_marginLeft="@dimen/size_25"
        android:layout_marginTop="@dimen/size_10"
        android:textSize="@dimen/size_15sp"
        android:layout_marginStart="@dimen/size_25" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="@dimen/size_60"
        android:layout_height="@dimen/size_60"
        android:layout_marginStart="@dimen/size_25"
        android:layout_marginLeft="@dimen/size_25"
        android:layout_marginTop="@dimen/size_10"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/carimage" />


<androidx.recyclerview.widget.RecyclerView
    android:id="@+id/recycler_view_1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/size_110"
    android:scrollbars="horizontal"
    android:layout_marginBottom="@dimen/size_15"

    />

</LinearLayout>