<?xml version="1.0" encoding="utf-8"?>


    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardView"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_270"
        android:layout_marginBottom="@dimen/size_16"
        android:layout_marginLeft="@dimen/size_16"

       >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/size_20">


            <ImageView
                android:id="@+id/barImage"
                android:layout_width="@dimen/size_50"
                android:layout_height="@dimen/size_20"
                android:layout_marginTop="@dimen/size_10"
                android:scaleType="fitXY"
                android:src="@drawable/baricon"
                 />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Counting Your Chicken\nBefore Thev Hatch "
                android:textColor="#000000"
                android:textSize="@dimen/size_18sp"
                android:textStyle="bold"
                 />

            <TextView
                android:id="@+id/textView24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_5"
                android:text="10:21 AM"
                android:textColor="#757575"
                android:textSize="@dimen/size_15sp"
                 />

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="@dimen/size_200"
                android:layout_height="@dimen/size_120"
                android:layout_marginTop="@dimen/size_10"
                android:layout_marginEnd="@dimen/size_20"
                android:layout_marginRight="@dimen/size_20"
                android:scaleType="fitXY"

                app:srcCompat="@drawable/nature2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10"
                android:layout_marginBottom="@dimen/size_5"
                android:scaleType="fitXY"
                android:src="@drawable/locationicon"
                />

            <TextView
                android:id="@+id/textView25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_10"
                android:layout_marginLeft="@dimen/size_10"
                android:layout_marginTop="@dimen/size_13"
                android:text="Louisiana"
                android:textColor="#757575"
                android:layout_marginBottom="@dimen/size_5"
                android:textSize="@dimen/size_14sp"
                />

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
