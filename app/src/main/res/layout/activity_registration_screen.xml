<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    tools:context=".RegistrationScreen"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">


        <TextView
            android:id="@+id/textView30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_20"
            android:text="Email design for mobile users"
            android:textColor="#616161"
            android:textSize="@dimen/size_16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="@dimen/size_280"
            android:layout_height="@dimen/size_45"
            android:layout_marginTop="@dimen/size_10"
            app:layout_constraintEnd_toEndOf="@+id/textView30"
            app:layout_constraintHorizontal_bias="0.507"
            app:layout_constraintStart_toStartOf="@+id/textView30"
            app:layout_constraintTop_toBottomOf="@+id/textView30"
            app:srcCompat="@drawable/logo" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_30"
            android:background="#03A9F4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView15">

            <ImageView
                android:id="@+id/imageView16"
                android:layout_width="@dimen/size_150"
                android:layout_height="@dimen/size_150"
                android:layout_marginTop="@dimen/size_16"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/person3" />

            <TextView
                android:id="@+id/textView31"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_16"
                android:text="Mobile first design"
                android:textColor="#ffffff"
                android:textSize="@dimen/size_24sp"
                app:layout_constraintEnd_toEndOf="@+id/imageView16"
                app:layout_constraintStart_toStartOf="@+id/imageView16"
                app:layout_constraintTop_toBottomOf="@+id/imageView16" />

            <TextView
                android:id="@+id/textView32"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Speaker: John Smith | 25\nAugust 2015 at 10:00 AM"
                android:textColor="#ffffff"
                android:textSize="@dimen/size_16sp"
                app:layout_constraintEnd_toEndOf="@+id/textView31"
                app:layout_constraintStart_toStartOf="@+id/textView31"
                app:layout_constraintTop_toBottomOf="@+id/textView31" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonRegister"
                android:layout_width="@dimen/size_215"
                android:layout_height="@dimen/size_55"
                android:layout_marginTop="@dimen/size_20"
                android:layout_marginBottom="@dimen/size_20"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
                android:gravity="center"
                android:text="register here"
                android:textColor="#ffffff"
                android:textSize="@dimen/size_18sp"
                app:strokeColor="#ffffff"
                app:strokeWidth="@dimen/size_2"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/textView32"
                app:layout_constraintStart_toStartOf="@+id/textView32"
                app:layout_constraintTop_toBottomOf="@+id/textView32" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/textView33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_25"
            android:layout_marginLeft="@dimen/size_25"
            android:layout_marginTop="@dimen/size_20"
            android:text="Best practice for a mobile\n world"
            android:textSize="@dimen/size_24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

        <TextView
            android:id="@+id/textView34"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_20"
            android:text="Consider which email design suits your message; mobile friendly emails will prove useful for information you want to get to your audience simply but effectively; for example brief fund, company or news updates, competitions or event confirmation emails.All information is kept to one, skinny column ensuring that on mobile the width can change without affecting the appearance. The font appears legible and the buttons have enough spacing to ensure mobile users can easily tap the link."
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textView33"
            app:layout_constraintTop_toBottomOf="@+id/textView33" />

        <TextView
            android:id="@+id/textView36"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_16"
            android:text="Date:"
            android:textColor="#000000"
            android:textSize="@dimen/size_14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/textView34"
            app:layout_constraintTop_toBottomOf="@+id/textView34" />

        <TextView
            android:id="@+id/textView37"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_3"
            android:layout_marginLeft="@dimen/size_3"
            android:layout_marginTop="@dimen/size_1"
            android:text="25/08/2015"
            app:layout_constraintStart_toEndOf="@+id/textView36"
            app:layout_constraintTop_toTopOf="@+id/textView36" />

        <TextView
            android:id="@+id/textView38"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_2"
            android:text="Time:"
            android:textColor="#000000"
            android:textSize="@dimen/size_14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/textView36"
            app:layout_constraintTop_toBottomOf="@+id/textView36" />

        <TextView
            android:id="@+id/textView39"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_3"
            android:layout_marginLeft="@dimen/size_3"
            android:layout_marginTop="@dimen/size_1"
            android:text="10:00 - 12:00"
            app:layout_constraintStart_toEndOf="@+id/textView38"
            app:layout_constraintTop_toBottomOf="@+id/textView37" />

        <TextView
            android:id="@+id/textView40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_2"
            android:text="Venue:"
            android:textColor="#000000"
            android:textSize="@dimen/size_14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/textView38"
            app:layout_constraintTop_toBottomOf="@+id/textView38" />

        <TextView
            android:id="@+id/textView41"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_3"
            android:layout_marginLeft="@dimen/size_3"
            android:layout_marginTop="@dimen/size_1"
            android:text="StoneShot Offices,"
            app:layout_constraintStart_toEndOf="@+id/textView40"
            app:layout_constraintTop_toTopOf="@+id/textView40" />

        <TextView
            android:id="@+id/textView42"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_2"
            android:text="London"
            app:layout_constraintStart_toStartOf="@+id/textView40"
            app:layout_constraintTop_toBottomOf="@+id/textView40" />

        <TextView
            android:id="@+id/textView43"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_2"
            android:layout_marginLeft="@dimen/size_2"
            android:layout_marginTop="@dimen/size_2"
            android:text="(Directions)"
            android:textColor="#03A9F4"
            android:textSize="@dimen/size_15sp"
            app:layout_constraintStart_toEndOf="@+id/textView42"
            app:layout_constraintTop_toBottomOf="@+id/textView40" />

        <Button
            android:id="@+id/button3"
            android:layout_width="@dimen/size_300"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_30"
            android:background="#03A9F4"
            android:text="save the date"
            android:textColor="#ffffff"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView42" />

        <ImageView
            android:id="@+id/imageView17"
            android:layout_width="@dimen/size_60"
            android:layout_height="@dimen/size_50"
            android:layout_marginStart="@dimen/size_50"
            android:layout_marginLeft="@dimen/size_50"
            android:layout_marginTop="@dimen/size_30"
            app:layout_constraintStart_toStartOf="@+id/button3"
            app:layout_constraintTop_toBottomOf="@+id/button3"
            app:srcCompat="@drawable/twitter" />

        <ImageView
            android:id="@+id/imageView18"
            android:layout_width="@dimen/size_60"
            android:layout_height="@dimen/size_50"
            android:layout_marginStart="@dimen/size_10"
            android:layout_marginLeft="@dimen/size_10"
            app:layout_constraintStart_toEndOf="@+id/imageView17"
            app:layout_constraintTop_toTopOf="@+id/imageView17"
            app:srcCompat="@drawable/linkedin" />

        <ImageView
            android:id="@+id/imageView19"
            android:layout_width="@dimen/size_60"
            android:layout_height="@dimen/size_50"
            android:layout_marginStart="@dimen/size_10"
            android:layout_marginLeft="@dimen/size_10"
            android:layout_marginEnd="@dimen/size_50"
            android:layout_marginRight="@dimen/size_50"
            app:layout_constraintEnd_toEndOf="@+id/button3"
            app:layout_constraintStart_toEndOf="@+id/imageView18"
            app:layout_constraintTop_toTopOf="@+id/imageView18"
            app:srcCompat="@drawable/google" />

        <TextView
            android:id="@+id/textView44"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_16"
            android:layout_marginLeft="@dimen/size_16"
            android:layout_marginTop="@dimen/size_30"
            android:layout_marginEnd="@dimen/size_16"
            android:layout_marginRight="@dimen/size_16"
            android:text="Consider which email design suits your message; mobile friendly emails will prove useful for information you want to get to your audience simply but effectively; for example brief fund, company or news updates, competitions or event confirmation emails.All information is kept to one, skinny column ensuring that on mobile the width can change without affecting the appearance. The font appears legible and the buttons have enough spacing to ensure mobile users can easily tap the link.\n\nConsider which email design suits your message; mobile friendly emails will prove useful for information you want to get to your audience simply but effectively; for example brief fund, company or news updates, competitions or event confirmation emails.All information is kept to one, skinny column ensuring that on mobile the width can change without affecting the appearance. The font appears legible and the buttons have enough spacing to ensure mobile users can easily tap the link."
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView17" />

        <TextView
            android:id="@+id/textView45"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_15"
            android:layout_marginBottom="@dimen/size_15"
            android:text="Unsubscribe"
            android:textColor="#03A9F4"
            android:textSize="@dimen/size_16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textView44"
            app:layout_constraintTop_toBottomOf="@+id/textView44" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>